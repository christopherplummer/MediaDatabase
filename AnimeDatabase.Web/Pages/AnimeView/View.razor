@page "/anime/{Slug}"

@using AnimeDatabase.Web.Data.Anime
@using AnimeDatabase.Web.Services.Interfaces

@inject IEntityService<Anime> AnimeService
@inject NavigationManager NavigationManager

@if (anime != null)
{
    <h1>@anime.Attributes.CanonicalTitle</h1>
                                        
    <RadzenCard Style="width:600px; margin-bottom: 20px; height:500px;">
        <div class="row">
            <div class="col-md-6">
                <div>English Name:</div>
                <b>@anime.Attributes.Titles.EnUs</b>
                <div style="margin-top:20px">Japanese Name:</div>
                <b>@anime.Attributes.Titles.JaJp</b>
                <div style="margin-top:20px">
                    <RadzenImage Path="@anime.Attributes.PosterImage.Tiny" Style="width:100px;" />
                </div>
            </div>
            <div class="col-md-6">
                <div>Episode Count:</div>
                <b>@anime.Attributes.EpisodeCount</b>
                <div style="margin-top:20px">Start Date:</div>
                <b>@anime.Attributes.StartDate</b>
                <div style="margin-top:20px">End Date:</div>
                <b>@anime.Attributes.EndDate</b>
                <div style="margin-top:20px">Synopsis:</div>
                <b>@anime.Attributes.Synopsis</b>
            </div>
        </div>
    </RadzenCard>
}
else
{
    <p>
        <em>Loading...</em>
    </p>
}

@code {
    private Anime anime;

    [Parameter]
    public string Slug { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var animeList = await AnimeService.Get();
        anime = animeList.FirstOrDefault(x => x.Attributes.Slug == Slug);

        if (anime == null) NavigationManager.NavigateTo("/manga");
    }

}